<%= form_with(
  model: @form,
  url: @form.url,
  builder: GOVUKDesignSystemFormBuilder::FormBuilder
) do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_radio_buttons_fieldset(
    :claim_school_id,
    legend: {
      text: claim_school_question,
      size: "l"
    }
  ) do %>
    <%= f.govuk_radio_button(
      :claim_school_id,
      f.object.claim_school_id,
      label: { text: f.object.claim_school_name },
      hint: { text: f.object.claim_school_address },
      link_errors: true,
    ) %>

    <%= f.govuk_radio_divider %>

    <%= f.govuk_radio_button(
      :claim_school_id,
      "somewhere_else",
      label: { text: "Somewhere else" },
      checked: f.object.claim_school_somewhere_else?,
    ) %>
  <% end %>

  <%= f.govuk_submit %>
<% end %>
