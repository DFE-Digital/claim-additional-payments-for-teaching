<% content_for(
  :page_title,
  page_title(
    leadership_position_question,
    journey: current_journey_routing_name,
    show_error: @form.errors.any?
  )
) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @form, url: @form.url, builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_collection_radio_buttons :had_leadership_position,
        @form.radio_options,
        :id,
        :name,
        inline: true,
        legend: {
          text: leadership_position_question,
          tag: "h1",
          size: "xl"
        },
        hint: {
          text: t("student_loans.forms.leadership_position.hints.leadership_position")
        } %>

      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>
