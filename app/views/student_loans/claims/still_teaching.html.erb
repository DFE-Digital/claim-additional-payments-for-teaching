<% content_for(
  :page_title,
  page_title(
    t("student_loans.forms.still_teaching.questions.claim_school"),
    journey: current_journey_routing_name,
    show_error: @form.errors.any?
  )
) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with(
      model: @form,
      url: @form.url,
      builder: GOVUKDesignSystemFormBuilder::FormBuilder
    ) do |f| %>

      <%= f.govuk_error_summary %>

      <%= f.govuk_collection_radio_buttons(
        :employment_status,
        f.object.radio_options,
        :id,
        :name,
        legend: {
          text: t("student_loans.forms.still_teaching.questions.claim_school"),
          size: "xl"
        }
      ) %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
