<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      Are you sure you want to remove the top up of <%= number_to_currency(@topup.award_amount) %>
    </h1>

    <%= form_with url: admin_claim_topup_path(claim_id: @claim.id, id: @topup.id), method: :delete do |f| %>
      <%= f.submit "Remove top up", class: "govuk-button govuk-button--warning" %>
      <%= link_to "Cancel", admin_claim_payments_path(@claim), class: "govuk-button govuk-button--secondary govuk-!-margin-left-1", role: "button", data: {module: "govuk-button"} %>
    <% end %>
  </div>
</div>
