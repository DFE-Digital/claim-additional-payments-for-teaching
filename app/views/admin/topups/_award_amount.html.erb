<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-third">
    <%= form_group_tag(f.object, :award_amount) do %>
      <%= f.label :award_amount, "Top up amount", class: "govuk-label" %>
      <%= errors_tag f.object, :award_amount %>
    <% end %>
  </div>
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-form-group">
      <div class="govuk-currency-input">
        <span class="govuk-currency-input__unit">&pound;</span>
        <%= f.number_field :award_amount, step: 0.01, class: "govuk-input govuk-currency-input__input govuk-input--width-5" %>
      </div>
    </div>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= f.submit "Top up", class: "govuk-button", data: {module: "govuk-button"} %>
    <%= link_to "Cancel", admin_claim_tasks_url(f.object.claim), class: "govuk-button govuk-button--secondary", role: "button", data: {module: "govuk-button"} %>
  </div>
</div>
