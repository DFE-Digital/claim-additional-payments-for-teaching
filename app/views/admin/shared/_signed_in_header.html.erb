<%= govuk_header(homepage_url: "https://www.gov.uk") %>

<% nav_html = govuk_service_navigation(
  service_name: "Claim additional payments for teaching",
  service_url: admin_root_path,
  navigation_items: admin_nav_items,
  current_path: request.fullpath
) %>

