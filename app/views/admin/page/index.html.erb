<% content_for(:page_title) { page_title("Admin home") } %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-half">
    <h2 class="govuk-heading-m">Claims received (<%= AcademicYear.current %>)</h2>
    <p class="govuk-body govuk-!-font-size-36"><%= @claims_received %></p>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

    <h2 class="govuk-heading-m">Claims approved (<%= AcademicYear.current %>)</h2>
    <p class="govuk-body govuk-!-font-size-36"><%= @claims_approved %></p>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

    <h2 class="govuk-heading-m">Claims rejected (<%= AcademicYear.current %>)</h2>
    <p class="govuk-body govuk-!-font-size-36"><%= @claims_rejected %></p>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
  </div>

  <div class="govuk-grid-column-one-half">
    <h2 class="govuk-heading-m">Total claims received</h2>
    <p class="govuk-body govuk-!-font-size-36"><%= @total_claims_received %></p>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

    <h2 class="govuk-heading-m">Claims approaching deadline</h2>
    <p class="govuk-body govuk-!-font-size-36"><%= @claims_approaching_deadline %></p>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

    <h2 class="govuk-heading-m">Claims passed deadline</h2>
    <p class="govuk-body govuk-!-font-size-36"><%= @claims_passed_decision_deadline %></p>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
  </div>
</div>

<br/>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-m">School Workforce Census Statistics</h1>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-half">
    <h2 class="govuk-heading-m">No data</h2>
    <p class="govuk-body govuk-!-font-size-36"><%= number_to_percentage(@no_data_census_subjects_taught_count, precision: 1) %></p>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
  </div>

  <div class="govuk-grid-column-one-half">
    <h2 class="govuk-heading-m">Any matches</h2>
    <p class="govuk-body govuk-!-font-size-36"><%= number_to_percentage(@any_match_count, precision: 1) %></p>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
  </div>
</div>

<br />

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-m">Further Education Payments Statistics</h1>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-half">
    <h2 class="govuk-heading-m">Provider verification tasks automatically passed (<%= AcademicYear.current %>) </h2>
    <p class="govuk-body govuk-!-font-size-36"><%= @fe_provider_verfication_tasks_automatically_passed %></p>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
  </div>
</div>
