<% content_for(:page_title) do %>
  <% page_title("Claim #{@claim.reference} provider check") %>
<% end %>

<% content_for :back_link do %>
  <%= govuk_back_link href: admin_claim_tasks_path(@claim) %>
<% end %>

<div class="govuk-grid-row">
  <%= render(
    "claim_summary_further_education_payments",
    claim: @claim,
    heading: "Provider check"
  ) %>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_warning_text(
      text: "Claims from this provider have been flagged for additional review"
    ) %>

    <p class="govuk-body">
      Last year claims from this provider were clawed back due to incorrect
      provider verification details.
    </p>
  </div>
</div>

<% if !@form.task.passed.nil? %>
  <%= render "task_outcome", task: @form.task %>
<% else %>
  <%= render "form", task_name: @form.task.name, claim: @claim %>
<% end %>
