<ul class="govuk-tabs__list">
  <li class="<%= class_names("govuk-tabs__list-item", { "govuk-tabs__list-item--selected" => current_page?({controller: "tasks"}) }) %>" role="presentation">
    <%= link_to_unless_current "Tasks", admin_claim_tasks_path(claim), class: "govuk-tabs__tab" %>
  </li>

  <li class="<%= class_names("govuk-tabs__list-item", { "govuk-tabs__list-item--selected" => current_page?({controller: "notes"}) }) %>" role="presentation">
    <%= link_to_unless_current "Notes and support", admin_claim_notes_path(@claim), class: "govuk-tabs__tab" %>
    <%= "(#{claim.notes.count})" if claim.notes.any? %>
  </li>

  <li class="<%= class_names("govuk-tabs__list-item", { "govuk-tabs__list-item--selected" => current_page?({controller: "amendments"}) }) %>" role="presentation">
    <%= link_to_unless_current "Claim amendments", admin_claim_amendments_path(@claim), class: "govuk-tabs__tab" %>
    <%= "(#{claim.amendments.count})" if claim.amendments.any? %>
  </li>

  <% if @claim.payrolled? || @claim.topups.present? %>
    <li class="<%= class_names("govuk-tabs__list-item", { "govuk-tabs__list-item--selected" => current_page?({controller: "payments"}) }) %>" role="presentation">
      <%= link_to_unless_current "Claim payments", admin_claim_payments_path(@claim), class: "govuk-tabs__tab" %>
    </li>
  <% end %>
</ul>
