<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      Choose and upload school workforce census data
    </h1>
    <%= form_with url: admin_school_workforce_census_data_uploads_path, multipart: true do |f| %>
      <div class="govuk-form-group">
        <%= f.label "file", "Upload a CSV file", class: "govuk-label" %>

        <% @school_workforce_census_data_importer && @school_workforce_census_data_importer.errors.each do |error| %>
          <span class="govuk-error-message">
            <span class="govuk-visually-hidden">Error:</span> <%= error %>
          </span>
        <% end %>

        <%= f.file_field "file", class: "govuk-file-upload" %>
      </div>
      <%= f.submit "Upload", class: "govuk-button", data: {module: "govuk-button"} %>
    <% end %>
  </div>
</div>
