<% content_for(:page_title, page_title(t("additional_payments.questions.induction_completed.heading"), journey: current_journey_routing_name, show_error: @form.errors.any?)) %>
<% path_for_form = @form.persisted? ? claim_path(current_journey_routing_name) : claims_path(current_journey_routing_name) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render("shared/error_summary", instance: @form, errored_field_id_overrides: { "induction_completed": "claim_induction_completed-error" }) if @form.errors.any? %>
    <%= form_for @form, url: path_for_form do |f| %>
      <%= form_group_tag @form do %>
        <%= f.hidden_field :induction_completed %>

        <fieldset class="govuk-fieldset">

          <legend class="govuk-fieldset__legend <%= fieldset_legend_css_class_for_journey(journey) %>">
            <h1 class="govuk-fieldset__heading">
              <%= t("additional_payments.questions.induction_completed.heading") %>
            </h1>
          </legend>

          <%= errors_tag f.object, :induction_completed %>

          <div class="govuk-radios">

            <div class="govuk-radios__item">
              <%= f.radio_button(:induction_completed, true, class: "govuk-radios__input") %>
              <%= f.label :induction_completed_true, "Yes", class: "govuk-label govuk-radios__label" %>
            </div>

            <div class="govuk-radios__item">
              <%= f.radio_button(:induction_completed, false, class: "govuk-radios__input") %>
              <%= f.label :induction_completed_false, "No", class: "govuk-label govuk-radios__label" %>
            </div>

          </div>

        </fieldset>

        <br/>
        <br/>

        <details class="govuk-details" data-module="govuk-details">
          <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
            <%= t("additional_payments.questions.induction_completed.hint.qualified.title") %>
          </span>
          </summary>
          <div class="govuk-details__text">
            <p class="govuk-body">
            <%= t("additional_payments.questions.induction_completed.hint.qualified.text_html") %>
            </p>
          </div>
        </details>

        <details class="govuk-details" data-module="govuk-details">
          <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
            <%= t("additional_payments.questions.induction_completed.hint.overseas.title") %>
          </span>
          </summary>
          <div class="govuk-details__text">
            <p class="govuk-body">
              <%= t("additional_payments.questions.induction_completed.hint.overseas.text_html") %>
            </p>
          </div>
        </details>
      <% end %>

      <%= f.submit "Continue", class: "govuk-button", data: {module: "govuk-button"} %>
    <% end %>
  </div>
</div>
