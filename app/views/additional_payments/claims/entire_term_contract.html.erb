<% content_for(:page_title, page_title(t("additional_payments.forms.entire_term_contract.questions.has_entire_term_contract"), journey: current_journey_routing_name, show_error: @form.errors.any?)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render("shared/error_summary", instance: @form, errored_field_id_overrides: { "has_entire_term_contract": "claim_has_entire_term_contract_true" }) if @form.errors.any? %>

    <%= form_for @form, url: claim_path(current_journey_routing_name) do |form| %>
      <%= form_group_tag @form do %>
        <%= form.hidden_field :has_entire_term_contract %>

        <fieldset class="govuk-fieldset">
          <legend class="govuk-fieldset__legend <%= fieldset_legend_css_class_for_journey(journey) %>">
            <h1 class="govuk-fieldset__heading">
              <%= t("additional_payments.forms.entire_term_contract.questions.has_entire_term_contract") %>
            </h1>
          </legend>

          <%= errors_tag @form, :has_entire_term_contract %>

          <div class="govuk-radios">
            <div class="govuk-radios__item">
              <%= form.radio_button(:has_entire_term_contract, true, class: "govuk-radios__input") %>
              <%= form.label :has_entire_term_contract_true, "Yes", class: "govuk-label govuk-radios__label" %>
            </div>

            <div class="govuk-radios__item">
              <%= form.radio_button(:has_entire_term_contract, false, class: "govuk-radios__input") %>
              <%= form.label :has_entire_term_contract_false, "No", class: "govuk-label govuk-radios__label" %>
            </div>
          </div>
        </fieldset>
      <% end %>

      <%= form.submit "Continue", class: "govuk-button", data: {module: "govuk-button"} %>
    <% end %>
  </div>
</div>
