<% content_for(:page_title, page_title(t("early_career_payments.questions.postgraduate_itt_or_undergraduate_itt_course"), policy: current_policy_routing_name, show_error: current_claim.errors.any?)) %>
<% path_for_form = current_claim.persisted? ? claim_path(current_policy_routing_name) : claims_path(current_policy_routing_name) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render("shared/error_summary", instance: current_claim, errored_field_id_overrides: { "eligibility.postgraduate_itt_or_undergraduate_itt_course": "claim_eligibility_attributes_postgraduate_itt_or_undergraduate_itt_course_true" }) if current_claim.errors.any? %>
    <%= form_for current_claim, url: path_for_form do |form| %>
      <%= form_group_tag current_claim do %>
        <%= form.fields_for :eligibility, include_id: false do |fields| %>

          <%= fields.hidden_field :pgitt_or_ugitt_course %>

          <fieldset class="govuk-fieldset">

            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
              <h1 class="govuk-fieldset__heading">
                <%= t("early_career_payments.questions.postgraduate_itt_or_undergraduate_itt_course") %>
              </h1>
            </legend>

            <%= errors_tag current_claim.eligibility, :pgitt_or_ugitt_course %>

            <div class="govuk-radios">

              <div class="govuk-radios__item">
                <%= fields.radio_button(:pgitt_or_ugitt_course, :postgraduate, class: "govuk-radios__input") %>
                <%= fields.label :pgitt_or_ugitt_course_postgraduate, t("early_career_payments.answers.pgitt_or_ugitt_course.postgraduate"), class: "govuk-label govuk-radios__label" %>
              </div>

              <div class="govuk-radios__item">
                <%= fields.radio_button(:pgitt_or_ugitt_course, :undergraduate, class: "govuk-radios__input") %>
                <%= fields.label :pgitt_or_ugitt_course_undergraduate, t("early_career_payments.answers.pgitt_or_ugitt_course.undergraduate"), class: "govuk-label govuk-radios__label" %>
              </div>

            </div>

          </fieldset>

        <% end %>
      <% end %>

      <%= form.submit "Continue", class: "govuk-button", data: {module: "govuk-button"} %>
    <% end %>
  </div>
</div>
