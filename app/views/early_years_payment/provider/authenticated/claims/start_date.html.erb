<% content_for(:page_title, page_title(@form.t(:question, first_name: answers.first_name, current_nursery: @form.nursery_name), journey: current_journey_routing_name, show_error: @form.errors.any?)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with(model: @form, url: @form.url, builder: GOVUKDesignSystemFormBuilder::FormBuilder) do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_date_field(
        :start_date,
        legend: { text: @form.t(:question, first_name: answers.first_name, current_nursery: @form.nursery_name), size: "l", tag: "h1" },
        hint: { text: @form.t(:hint) }) %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
