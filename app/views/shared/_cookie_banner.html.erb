<%= govuk_cookie_banner(html_attributes: { id: "askCookieBanner", hidden: hide_cookie_banner?}) do |cb| %>
  <% cb.with_message(heading_text: "Cookies on Claim additional payments for teaching") do |m| %>
    <% m.with_action { govuk_button_to("Accept additional cookies", accept_cookies_path(current_journey_routing_name), remote: true, form: { id: "formAcceptCookie" }) } %>
    <% m.with_action { govuk_button_to("Reject additional cookies", reject_cookies_path(current_journey_routing_name), remote: true, form: { id: "formRejectCookie" }) } %>
    <% m.with_action { govuk_link_to("View cookies", cookies_path(current_journey_routing_name)) } %>

    <p class="govuk-body">
      We use some essential cookies to make this service work.
    </p>

    <p class="govuk-body">
      Weâ€™d like to set additional cookies so we can remember your settings, understand how people use the service and make improvements
    </p>
  <% end %>
<% end %>

<%= govuk_cookie_banner(html_attributes: { id: "acceptedCookieBanner", hidden: hide_accepted_cookie_banner?}) do |cb| %>
  <% cb.with_message do |m| %>
    <% m.with_action { govuk_button_to("Hide cookie message", hide_cookies_path(current_journey_routing_name), remote: true, form: { id: "formHideAcceptCookie" }) } %>

    <p class="govuk-body">
      You have accepted additional cookies. You can <%= govuk_link_to "change your cookie settings", cookies_path(current_journey_routing_name) %> at any time.
    </p>
  <% end %>
<% end %>

<%= govuk_cookie_banner(html_attributes: { id: "rejectedCookieBanner", hidden: hide_rejected_cookie_banner?}) do |cb| %>
