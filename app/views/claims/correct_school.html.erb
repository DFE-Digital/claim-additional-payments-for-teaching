<%= form_with(model: @form, url: @form.url, builder: GOVUKDesignSystemFormBuilder::FormBuilder) do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_radio_buttons_fieldset(
    :current_school_id,
    legend: {
      size: "xl",
      text: t("targeted_retention_incentive_payments.forms.correct_school.questions.which_school")
    }
  ) do %>
      <%= f.govuk_radio_button(
        :current_school_id,
        @form.current_school_id,
        label: { text: @form.current_school_name },
        hint: { text: @form.current_school_address },
        link_errors: true
      ) %>

      <%= f.govuk_radio_divider %>

      <%= f.govuk_radio_button(
        :current_school_id,
        "somewhere_else",
        label: { text: "Somewhere else" }
      ) %>
    <% end %>

  <%= f.govuk_submit %>

<% end %>
