<% if params[:school_search]&.present? %>
  <% @backlink_path = claim_path(current_journey_routing_name, @navigator.current_slug) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <% if @form.schools.blank? %>
      <%= render "current_school_search",
                question: t("#{@form.i18n_namespace}.forms.current_school.questions.current_school_search"),
                school_search_value: @form.current_school_name
      %>
    <% else %>
      <%= render "current_school_search_results",
                 question: t("#{@form.i18n_namespace}.forms.current_school.questions.current_school_results")
      %>
    <% end %>
  </div>
</div>
