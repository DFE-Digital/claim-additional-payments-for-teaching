<% @backlink_path = landing_page_path %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, url: claim_path(current_journey_routing_name), method: :patch, builder: GOVUKDesignSystemFormBuilder::FormBuilder, html: { novalidate: false } do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-l">
        To apply for a further education financial incentive payment, you must be employed as a member of staff with teaching responsibilities
      </h1>

      <p class="govuk-body">
        Your job title could include:
      </p>

      <%= govuk_list [
        "advanced practitioner",
        "practitioner",
        "instructor",
        "lecturer",
        "teacher",
        "trainer",
        "tutor"
      ], type: :bullet %>

      <%= f.govuk_collection_radio_buttons :teaching_responsibilities, @form.radio_options, :id, :name,
        legend: { text: @form.t(:question) } %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
