<% content_for(:page_title, page_title(@form.t(:question), journey: current_journey_routing_name, show_error: @form.errors.any?)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, url: @form.url, method: :patch, builder: GOVUKDesignSystemFormBuilder::FormBuilder, html: { novalidate: false } do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_collection_radio_buttons :previously_claimed, @form.radio_options, :id, :name,
        legend: {
          text: @form.t(:question, previous_claim_window_start: @form.previous_claim_window_start, previous_claim_window_end: @form.previous_claim_window_end),
          tag: "h1",
          size: "l"
        },
        hint: {
          text: @form.t(:hint),
        } %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
