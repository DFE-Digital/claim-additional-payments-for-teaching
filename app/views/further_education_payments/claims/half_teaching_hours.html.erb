<% content_for(:page_title, page_title(@form.t(:question), journey: current_journey_routing_name, show_error: @form.errors.any?)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, url: @form.url, method: :patch, builder: GOVUKDesignSystemFormBuilder::FormBuilder, html: { novalidate: false } do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_collection_radio_buttons :half_teaching_hours,
        @form.radio_options,
        :id,
        :name,
        legend: {
          tag: "h1",
          size: "l",
          text: @form.t(:question)
        },
        hint: -> { %>
          <p class="govuk-body">
            This also includes teaching:
          </p>

          <%= govuk_list [
            "students enrolled on these programmes who are 25 years old or younger with an Education, Health and Care Plan (EHCP)",
            "14 to 16 year olds enrolled on 16 to 19 funded study programmes"
          ], type: :bullet %>
        <% } %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
