<%= content_for(
  :page_title,
  "Review a targeted retention incentive payment claim"
) %>

<% content_for :back_link do %>
  <%= govuk_back_link href: further_education_payments_providers_claims_path %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "verification_header", locals: { claim: @form.claim } %>

    <%= form_with(
      model: @form,
      url: further_education_payments_providers_claim_verification_path(
        @form.claim,
        @form.provider,
        slug: @form.slug
      ),
      builder: GOVUKDesignSystemFormBuilder::FormBuilder,
      method: :patch,
    ) do |f| %>
      <%= f.govuk_error_summary %>

      <h2 class="govuk-heading-m">
        Role and experience
      </h2>

      <%= f.govuk_collection_radio_buttons(
        :provider_verification_teaching_responsibilities,
        f.object.teaching_responsibilities_options,
        :id,
        :name,
        legend: {
          text: "Is #{f.object.claimant_name} a member of staff with the " \
                "responsibilities of a teacher?",
          size: "s",
        }
      ) %>

      <%= f.govuk_submit("Continue") %>

      <%= f.govuk_submit(
        "Save and come back later",
        secondary: true,
        name: "save_and_exit",
        value: true,
        class: "govuk-!-margin-left-2"
      ) %>

      <%= govuk_details(
        summary_text: "Who counts as a teacher for this payment",
      ) do %>
        <p class="govuk-body">
          This means that they must be doing all these:
        </p>

        <%= govuk_list [
          "independently teaching timetabled guided learning hours to classes of students",
          "planning and preparing lessons for classes of students",
          "assessing learning and reporting on progress for classes of students"
        ], type: :bullet %>

        <p class="govuk-body">
          This payment is not for non-teaching staff. This includes:
        </p>

        <%= govuk_list [
          "non-teaching assessors",
          "non-teaching leaders",
          "support staff like assistants or technicians"
        ], type: :bullet %>
      <% end %>
    <% end %>
  </div>
</div>
