<%= content_for(
  :page_title,
  "Review a targeted retention incentive payment claim"
) %>

<%= govuk_back_link href: backlink_path %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "verification_header", locals: { claim: @form.claim } %>

    <%= form_with(
      model: @form,
      url: further_education_payments_providers_claim_verification_path(
        @form.claim,
        @form.provider,
        slug: @form.slug,
      ),
      builder: GOVUKDesignSystemFormBuilder::FormBuilder,
      method: :patch,
    ) do |f| %>
      <%= f.govuk_error_summary %>

      <h2 class="govuk-heading-m">
        Age cohort taught over the <%= @claim.submitted_at.term %> term
      </h2>

      <%= f.govuk_collection_radio_buttons(
        :provider_verification_half_teaching_hours,
        f.object.provider_verification_half_teaching_hours_options,
        :id,
        :name,
        legend: {
          text: "Did #{f.object.claimant_name} spend at least half of their " \
          "timetabled teaching hours teaching students funded through the " \
          "16 to 19 education funding system or apprentices aged 16 to 19?",
          size: "s",
        },
        hint: -> do %>
          <p class="govuk-body">
            This includes students:
          </p>
          <%= govuk_list [
            "studying T Levels",
            "on apprenticeships and aged 16 to 19",
            "aged 16 to 19 and funded through the 16 to 19 system",
            "aged up to 25 with an Education, Health and Care Plan (EHCP) funded through the 16 to 19 system",
            "aged 14 to 16 and directly enrolled into eligible FE institutions"
          ], type: :bullet %>
        <% end
      ) %>

      <%= f.govuk_submit("Continue") %>

      <%= f.govuk_submit(
        "Save and come back later",
        secondary: true,
        name: "save_and_exit",
        value: true,
        class: "govuk-!-margin-left-2"
      ) %>
    <% end %>
  </div>
</div>
