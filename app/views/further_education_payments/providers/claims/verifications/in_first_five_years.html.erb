<%= content_for(
  :page_title,
  "Review a targeted retention incentive payment claim"
) %>

<% content_for :back_link do %>
  <%= govuk_back_link href: backlink_path %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: "verification_header", locals: { claim: @form.claim } %>

    <%= form_with(
      model: @form,
      url: further_education_payments_providers_claim_verification_path(
        @form.claim,
        @form.provider,
        slug: @form.slug
      ),
      builder: GOVUKDesignSystemFormBuilder::FormBuilder,
      method: :patch,
    ) do |f| %>
      <%= f.govuk_error_summary %>

      <h2 class="govuk-heading-m">
        Role and experience
      </h2>

      <%= f.govuk_collection_radio_buttons(
        :provider_verification_teaching_start_year_matches_claim,
        f.object.teaching_start_year_matches_claim_options,
        :id,
        :name,
        legend: {
          text: f.object.t(
            "provider_verification_teaching_start_year_matches_claim.question",
            claimant_name: f.object.claimant_name,
            claimant_further_education_teaching_start_year: f.object.claimant_further_education_teaching_start_year
          ),
          size: "s",
        }
      ) %>

      <%= govuk_details(
        summary_text: "What counts torwards the first 5 years of a further " \
                      "education (FE) teaching career",
      ) do %>
        <p class="govuk-body">
          This is the first academic year the teacher took on FE teaching
          responsibilities in England. We define this as the academic year when
          the teacher took on the following teaching responsibilities at a
          post-16 education provider in England:
        </p>
        <%= govuk_list(
          [
            "independently teaching timetabled guided learning hours to classes of students",
            "planning and preparing lessons for classes of students",
            "assessing learning and reporting on progress for classes of students"
          ],
          type: :bullet
        ) %>
      <% end %>

      <%= f.govuk_submit("Continue") %>

      <%= f.govuk_submit(
        "Save and come back later",
        secondary: true,
        name: "save_and_exit",
        value: true,
        class: "govuk-!-margin-left-2"
      ) %>
    <% end %>
  </div>
</div>
