<%= content_for(
  :page_title,
  "Employment check needed for this claim"
) %>

<% content_for :back_link do %>
  <%= govuk_back_link href: further_education_payments_providers_claims_path %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      Employment check needed for this claim
    </h1>

    <p class="govuk-body">
      This applicant was not able to prove their identity when making their claim.
    </p>

    <p class="govuk-body">
      Before you can verify this claim, we need to do an employment check 
      against the information that the applicant has submitted.
    </p>

    <p class="govuk-body">
      You will not need to send any documents to the DfE.
    </p>

    <%= form_with(
      model: @form,
      url: further_education_payments_providers_claim_verification_path(
        @form.claim,
        @form.provider,
        slug: @form.slug
      ),
      builder: GOVUKDesignSystemFormBuilder::FormBuilder,
      method: :patch,
    ) do |f| %>
      <%= f.govuk_submit("Continue") %>
    <% end %>
  </div>
</div>
